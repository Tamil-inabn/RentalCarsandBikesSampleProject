@model BAL.ViewModel.UserVehicleViewBAL

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<style>
    .fa {
        display: inline-block;
        font: normal normal normal 25px/1 FontAwesome;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        LEFT: 85PX;
        POSITION: ABSOLUTE;
    }
</style>

<i class="fa fa-arrow-circle-o-left" aria-hidden="true" onclick='window.location="@Url.ActionLink("AdminVehicleList","Admin")";'>Back</i>
<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Vehicles</p>
    <form asp-controller="Admin" asp-action="UpdateVehicle" method="post" enctype="multipart/form-data" class="mx-1 mx-md-4">
        <div class="d-flex flex-row align-items-center mb-4">
            <input type="hidden" id="form3Example1c" value="@Model.VehicleId" name="VehicleId" class="form-control" />
            <input type="hidden" id="form3Example1c" value="@Model.AdminId" name="AdminId" class="form-control" />
            <input type="hidden" id="form3Example1c" value="@Model.VehiclePhotos" name="VehiclePhotos" class="form-control" />
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="form3Example1c">Vehicle Name</label>
                <input type="text" id="form3Example1c" value="@Model.VehicleName" name="VehicleName" class="form-control" />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="form3Example3c">Vehicle No</label>
                <input type="text" id="form3Example3c" value="@Model.VehicleNo" name="VehicleNo" class="form-control" />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="form3Example4c">Vehicle Type</label>
                <input type="text" value="@Model.VehicleType" name="VehicleType" id="form3Example4c" class="form-control" />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="form3Example4cd">No Of Vehicle</label>
                <input type="text" value="@Model.NoOfVehicle" name="NoOfVehicle" id="form3Example4cd" class="form-control" />
            </div>
        </div>

        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
            <button type="submit" class="btn btn-primary btn-lg">Edit</button>
        </div>

        <input type="file" name="VehiclePhoto" style="position: absolute;top: 365px;left: 670px;" />

    </form>

</div>
<div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
    <img src="~/Vehicle/@Model.VehiclePhoto" class="img-fluid">   
</div>

