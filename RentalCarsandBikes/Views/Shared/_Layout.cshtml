                        <ul class="list-unstyled mb-0">
                            <li>
                                <img src="~/logo/gmail.png" height="50" width="50" /><p>Gmail</p>
                            </li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <img src="~/logo/whatsapp.png" height="50" width="50" /><p>Whatsapp</p>
                            </li>
                        </ul>
                    </div>

