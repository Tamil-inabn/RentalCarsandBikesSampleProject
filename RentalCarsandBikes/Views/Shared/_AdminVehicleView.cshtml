@{
    Layout = "_Layout.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@model List<BAL.ViewModel.UserVehicleViewBAL>

<style>
    .fa {
        display: inline-block;
        font: normal normal normal 35px/3 FontAwesome;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>

<i class="fa fa-arrow-circle-o-left" aria-hidden="true" onclick='window.location="@Url.ActionLink("Index","Admin")";'>Back</i>
<div class="container" style="font-family:'Times New Roman';font-weight:200">
    <table class="table table-bordered table-hover">
        <thead>
            <tr align="center">
                <th>Vehicle Photo</th>
                <th>Vehicle Id</th>
                <th>Vehicle No</th>
                <th>Vehicle Name</th>
                <th>Vehicle Type</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr align="center">
                    <td><img src="\vehicle\@item.VehiclePhoto" width="100" height="65" /></td>
                    <td>@item.VehicleId</td>
                    <td>@item.VehicleNo</td>
                    <td>@item.VehicleName</td>
                    <td>@item.VehicleType</td>
                    <td>
                        @Html.ActionLink("Edit","VehicleId",new{vehicleid=@item.VehicleId})  ||
                        @Html.ActionLink("Delete","DeleteVehicle",new{id=@item.VehicleId})
                    </td>                   
                </tr>
            }
        </tbody>
    </table>
</div>